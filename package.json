{
  "name": "portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "A portfolio website built with React and Vite",
  "homepage": "https://hmandana.github.io/portfolio",
  "repository": {
    "type": "git",
    "url": "https://github.com/hmandana/portfolio.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "server": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "full-dev": "concurrently \"npm run server\" \"npm run dev\"",
    "test:connection": "npx tsx test-connection.ts",
    "db:status": "node server/utils/db-operations.js status",
    "db:init": "node server/utils/db-operations.js init",
    "db:clear": "node server/utils/db-operations.js clear"
  },
  "dependencies": {
    "@apollo/client": "^3.13.9",
    "@apollo/server": "^4.12.2",
    "@as-integrations/hapi": "^2.0.1",
    "@graphql-tools/schema": "^10.0.25",
    "@hapi/hapi": "^21.4.0",
    "dotenv": "^17.2.1",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "mongoose": "^8.17.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
